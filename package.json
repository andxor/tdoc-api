{
  "name": "tdoc-api",
  "version": "1.0.0",
  "description": "Wrapper around tDoc REST-ful APIs",
  "main": "index.js",
  "homepage": "https://github.com/andxor/tdoc-api",
  "repository": {
    "type": "git",
    "url": "https://github.com/andxor/tdoc-api.git"
  },
  "bugs": "https://github.com/andxor/tdoc-api/issues",
  "author": "Lapo Luchini <l.luchini@andxor.it>",
  "license": "ISC",
  "engines": {
    "node": ">=12.4.0"
  },
  "dependencies": {
    "@lapo/extractcms": "^1.0.4",
    "superagent": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.2",
    "tape-nock": "^1.6.1"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "node test/test.js local | tap-spec",
    "test-update": "node test/test.js | tap-spec"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 13
    },
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "strict": [ "error", "global" ],
      "indent": [ "warn", 4 ],
      "linebreak-style": [ "warn", "unix" ],
      "quotes": [ "warn", "single" ],
      "semi": [ "warn", "always" ],
      "comma-dangle": [ "error", "always-multiline" ],
      "no-trailing-spaces": "warn",
      "no-unused-vars": "warn"
    }
  }
}
